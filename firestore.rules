rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Règle de base pour la majorité des collections :
    // La lecture est publique (pour que le site fonctionne)
    // L'écriture (créer, modifier, supprimer) est réservée aux administrateurs.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // EXCEPTION 1: La collection des commentaires
    // Tout le monde doit pouvoir créer un commentaire.
    match /comments/{commentId} {
      allow read, create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // EXCEPTION 2: La collection des sondages
    // Tout le monde doit pouvoir écrire pour voter.
    match /polls/{pollId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
