rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default rule: public read, admin-only write
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Exception: anyone can create comments
    match /comments/{commentId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
    
    // Exception: anyone can vote on polls
    match /polls/{pollId} {
        allow read: if true;
        // Allow write only to update votes, not to change the poll structure
        allow write: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['options', 'totalVotes']);
    }
  }
}
