
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Publicly readable data ---
    // All collections are publicly readable so server components can access them.
    match /{document=**} {
      allow read: if true;
    }

    // --- Write Rules ---
    
    // Admins can write to most collections
    match /articles/{doc} { allow write: if request.auth != null; }
    match /categories/{doc} { allow write: if request.auth != null; }
    match /media/{doc} { allow write: if request.auth != null; }
    match /sponsors/{doc} { allow write: if request.auth != null; }
    match /sponsors_public_view/{doc} { allow write: if request.auth != null; }
    match /navetane_public_views/{doc} { allow write: if request.auth != null; }
    match /finals_public_view/{doc} { allow write: if request.auth != null; }
    match /teams/{doc} { allow write: if request.auth != null; }
    match /navetane_poules/{doc} { allow write: if request.auth != null; }
    match /navetane_coupe_matches/{doc} { allow write: if request.auth != null; }
    match /navetane_preliminary_match/{doc} { allow write: if request.auth != null; }
    match /finals_admin_data/{doc} { allow write: if request.auth != null; }

    // CORRECTED RULE for navetane_stats collection
    match /navetane_stats/{docId} {
      allow write: if request.auth != null;
    }

    // --- Special Write Rules ---

    // Anyone can create comments
    match /comments/{comment} {
      allow create: if true;
      allow update, delete: if request.auth != null; // Only admin can moderate
    }

    // Anyone can vote on polls (update), but only admins create/delete them.
    match /polls/{pollId} {
      allow create, delete: if request.auth != null; 
      allow update: if true; 
    }
  }
}
