rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Publicly readable data ---
    // Articles, categories, public media, comments, and published views are readable by anyone.
    match /articles/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /media/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /sponsors_public_view/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
     match /navetane_public_views/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /navetane_stats/public_view {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /finals_public_view/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /teams/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /polls/{pollId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if true; // Anyone can vote
      allow delete: if request.auth != null;
    }

    // --- User-submittable data ---
    // Anyone can create comments.
    match /comments/{comment} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if request.auth != null;
    }
    
    // --- Admin-only writable/readable data ---
    // These collections are primarily for admin use.
    match /sponsors/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /navetane_poules/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /navetane_coupe_matches/{document=**} {
      allow read, write: if request.auth != null;
    }
    match /navetane_preliminary_match/{document=**} {
      allow read, write: if request.auth != null;
    }
     match /navetane_stats/admin_data {
        allow read, write: if request.auth != null;
    }
     match /finals_admin_data/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}