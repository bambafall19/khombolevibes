rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default rule: Allow public read access, but restrict write access to authenticated users.
    // This rule applies to ALL collections unless a more specific rule overrides it.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Override for 'comments' to allow anyone to create them.
    match /comments/{commentId} {
      allow read, create: if true;
      allow update, delete: if request.auth != null; // Only admin can edit/delete.
    }

    // Override for 'polls' to allow anyone to vote (which is a write operation).
    match /polls/{pollId} {
      allow read, write: if true;
    }

  }
}
