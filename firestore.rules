
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Règle générale : la lecture est publique, l'écriture est réservée aux admins
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Exception pour les commentaires : tout le monde peut en créer
    match /comments/{commentId} {
      allow read, create: if true;
      allow update, delete: if request.auth != null; // ... mais seuls les admins peuvent modérer
    }
    
    // Exception pour les sondages : tout le monde peut voter (écrire)
    match /polls/{pollId} {
      allow read, write: if true;
    }
  }
}
