rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Publicly readable data ---
    // All collections are publicly readable for site functionality.
    // Writes are restricted below.

    match /articles/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /media/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /sponsors/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /sponsors_public_view/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
     match /navetane_public_views/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /navetane_poules/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /navetane_coupe_matches/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /navetane_preliminary_match/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /navetane_stats/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /finals_public_view/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /finals_admin_data/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /teams/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // --- User-submittable data ---
    // Anyone can create comments and vote on polls
    match /comments/{document=**} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if request.auth != null;
    }
    match /polls/{document=**} {
      allow read: if true;
      // Allow authenticated users to create/delete polls.
      // Anyone can vote (update). This is handled by a transaction.
      allow create, delete: if request.auth != null;
      allow update: if true;
    }
  }
}
