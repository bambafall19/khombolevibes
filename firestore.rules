rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Publicly readable data ---
    match /articles/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /media/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /teams/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /sponsors_public_view/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /navetane_public_views/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /navetane_stats/public_view {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /finals_public_view/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- User-submittable data ---
    // Anyone can create comments and vote on polls
    match /comments/{comment} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if request.auth != null;
    }
    match /polls/{pollId} {
      allow read: if true;
      // Allow authenticated users to create/delete polls.
      // Anyone can vote (update). This is handled by a transaction in a server-side function.
      allow create, delete: if request.auth != null;
      allow update: if true; 
    }
    
    // --- Admin-only writable data ---
    // These collections can only be written to by authenticated users (admins).
    match /sponsors/{document=**} {
      allow read: if true; // Public read for publishing function
      allow write: if request.auth != null;
    }
    match /navetane_poules/{document=**} {
      allow read: if true; // Public read for publishing function
      allow write: if request.auth != null;
    }
    match /navetane_coupe_matches/{document=**} {
      allow read: if true; // Public read for publishing function
      allow write: if request.auth != null;
    }
    match /navetane_preliminary_match/{document=**} {
      allow read: if true; // Public read for publishing function
      allow write: if request.auth != null;
    }
    match /navetane_stats/admin_data {
        allow read, write: if request.auth != null;
    }
    match /finals_admin_data/{document=**} {
      allow read: if true; // Public read for publishing function
      allow write: if request.auth != null;
    }
  }
}