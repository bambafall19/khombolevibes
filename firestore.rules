
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Publicly readable data ---
    match /articles/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /media/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /sponsors_public_view/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
     match /navetane_public_views/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /navetane_stats/public_view {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /finals_public_view/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- User-submittable data ---
    match /comments/{comment} {
        allow read: if true;
        allow create: if true;
        allow update, delete: if request.auth != null;
    }
    match /polls/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
      allow update: if true; // Allow anyone to vote (update total votes) through the secured transaction
    }
    
    // --- Admin-only writable data (but publicly readable) ---
    match /teams/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    match /sponsors/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /navetane_poules/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /navetane_coupe_matches/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /navetane_preliminary_match/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /navetane_stats/admin_data {
        allow read: if true;
        allow write: if request.auth != null;
    }
     match /finals_admin_data/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
