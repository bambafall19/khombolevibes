rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règle globale pour tous les documents
    // Permet à tout le monde (y compris le serveur Vercel) de lire les données.
    // Seuls les utilisateurs authentifiés (admins) peuvent écrire/modifier des données.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
