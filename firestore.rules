rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin
    function isAdmin() {
      return request.auth != null;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // PUBLIC: Allow anyone to read these collections
    match /articles/{docId} { allow read: if true; }
    match /categories/{docId} { allow read: if true; }
    match /media/{docId} { allow read: if true; }
    match /teams/{docId} { allow read: if true; }
    match /sponsors_public_view/{docId} { allow read: if true; }
    match /navetane_public_views/{docId} { allow read: if true; }
    match /navetane_stats/{docId} { 
      allow read: if docId == 'public_view';
      allow write: if isAdmin();
    }
    match /finals_public_view/{docId} { allow read: if true; }

    // ADMIN: Allow only authenticated users to write to these collections
    match /articles/{docId} { allow write: if isAdmin(); }
    match /categories/{docId} { allow write: if isAdmin(); }
    match /media/{docId} { allow write: if isAdmin(); }
    match /teams/{docId} { allow write: if isAdmin(); }
    match /sponsors/{docId} { allow read, write: if isAdmin(); }
    match /navetane_poules/{docId} { allow read, write: if isAdmin(); }
    match /navetane_coupe_matches/{docId} { allow read, write: if isAdmin(); }
    match /navetane_preliminary_match/{docId} { allow read, write: if isAdmin(); }
    match /finals_admin_data/{docId} { allow read, write: if isAdmin(); }
    
    // SPECIAL CASES
    match /comments/{docId} {
      allow read, create: if true;
      allow update, delete: if isAdmin();
    }
    match /polls/{docId} {
      allow read: if true;
      // Allow authenticated users to create/delete polls.
      allow create, delete: if isAdmin();
      // Allow anyone to vote (update).
      allow update: if true;
    }
  }
}