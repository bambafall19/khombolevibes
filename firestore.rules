rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Règle globale : la lecture est publique, l'écriture nécessite une authentification
    // Ceci est la règle la plus simple et la plus sûre pour votre application.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Cas spéciaux pour les commentaires et les votes
    // où même les non-admins doivent pouvoir écrire.
    match /comments/{commentId} {
      // Tout le monde peut lire et créer, seuls les admins peuvent modifier/supprimer.
      allow read, create: if true;
      allow update, delete: if request.auth != null;
    }

    match /polls/{pollId} {
        // Tout le monde peut lire et écrire (pour pouvoir voter)
        allow read, write: if true;
    }
  }
}
