rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Règle de base : lecture publique, écriture pour les admins.
    match /articles/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /categories/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /media/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /teams/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /sponsors/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /navetane_poules/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /navetane_coupe_matches/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /navetane_preliminary_match/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /navetane_stats/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /finals_admin_data/{documentId} { allow read: if true; allow write: if request.auth != null; }
    
    // Vues publiques (générées par l'admin)
    match /sponsors_public_view/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /navetane_public_views/{documentId} { allow read: if true; allow write: if request.auth != null; }
    match /finals_public_view/{documentId} { allow read: if true; allow write: if request.auth != null; }

    // --- RÈGLES SPÉCIALES ---

    // La collection des sondages (polls)
    match /polls/{pollId} {
      // Tout le monde peut lire ET écrire pour pouvoir voter.
      allow read, write: if true;
    }

    // La collection des commentaires
    match /comments/{commentId} {
      // Tout le monde peut lire et créer des commentaires.
      allow read, create: if true;
      // Seuls les admins peuvent modifier ou supprimer.
      allow update, delete: if request.auth != null;
    }
  }
}
