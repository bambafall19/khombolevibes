rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // --- Règle globale par défaut ---
    // Par défaut, la lecture est autorisée pour tout le monde (y compris le serveur Vercel).
    // L'écriture n'est autorisée que pour les utilisateurs authentifiés (administrateurs).
    match /{path=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- Règles spécifiques pour les créations publiques ---
    // N'importe qui peut créer des commentaires. La modification reste protégée.
    match /comments/{commentId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // N'importe qui peut voter sur un sondage. La création/suppression est protégée.
    // Le vote (une mise à jour) est géré par une fonction côté serveur qui a ses propres sécurités.
    match /polls/{pollId} {
        allow read: if true;
        allow update: if true; // Permet à la transaction de vote de fonctionner
        allow create, delete: if request.auth != null;
    }
  }
}
