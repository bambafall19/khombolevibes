rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- RÈGLES SPÉCIALES ---

    // La collection des sondages (polls)
    match /polls/{pollId} {
      // Tout le monde peut lire ET écrire pour pouvoir voter.
      allow read, write: if true;
    }

    // La collection des commentaires
    match /comments/{commentId} {
      // Tout le monde peut lire et créer des commentaires.
      allow read, create: if true;
      // Seuls les admins peuvent modifier ou supprimer.
      allow update, delete: if request.auth != null;
    }
    
    // Règle générale pour tous les autres documents
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
