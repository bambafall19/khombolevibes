rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC READ, ADMIN WRITE
    match /articles/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /categories/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /media/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /teams/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /polls/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // PUBLIC READ AND WRITE FOR ADMINS, used for navetane pages
    match /navetane_poules/{document=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    match /navetane_coupe_matches/{document=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    match /navetane_preliminary_match/{document=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    match /sponsors/{document=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    match /finals_admin_data/{document=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }
    
    // PUBLIC READ FOR PUBLISHED VIEWS
    match /navetane_public_views/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only backend can write
    }
    match /sponsors_public_view/{document=**} {
      allow read: if true;
      allow write: if request.auth != null; // Only backend can write
    }
    match /navetane_stats/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
     match /finals_public_view/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // COMMENTS: Allow anyone to create, admin to delete
    match /comments/{comment} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if request.auth != null;
    }
  }
}
