rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Règle par défaut : Tout le monde peut lire. Seuls les admins peuvent écrire.
    // Cela s'applique à toutes les collections (articles, categories, teams, etc.)
    // sauf si une règle plus spécifique est définie ci-dessous.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // --- EXCEPTIONS AUX RÈGLES PAR DÉFAUT ---

    // La collection des commentaires
    // Tout le monde peut lire et créer des commentaires.
    // Seul un admin peut modifier ou supprimer un commentaire.
    match /comments/{commentId} {
      allow read, create: if true;
      allow update, delete: if request.auth != null;
    }

    // La collection des sondages (polls)
    // Tout le monde a besoin d'un accès en écriture pour pouvoir voter.
    // La logique de l'application doit empêcher les abus (ex: voter une seule fois).
    match /polls/{pollId} {
       allow read, write: if true;
    }
  }
}
