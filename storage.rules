
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files.
    // This is safe for media files like images.
    // For write access, you should use Firebase Admin SDK from a secure server
    // or implement authentication-based rules if users are allowed to upload directly.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
